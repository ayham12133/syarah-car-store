# Syarah Car Store - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=yii2_carstore
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_CHARSET=utf8

# Application Environment
APP_ENV=dev
APP_DEBUG=true
APP_NAME="Syarah Car Store"

# Security Keys (generate new ones for production)
COOKIE_VALIDATION_KEY_DASHBOARD=your-dashboard-secret-key-here
COOKIE_VALIDATION_KEY_STOREFRONT=your-storefront-secret-key-here

# Email Configuration
MAILER_USE_FILE_TRANSPORT=true
MAILER_FROM_EMAIL=noreply@example.com
MAILER_FROM_NAME="Syarah Car Store"

# SMTP Configuration (uncomment and configure if using real email)
# MAILER_USE_FILE_TRANSPORT=false
# MAILER_TRANSPORT_SCHEME=smtps
# MAILER_TRANSPORT_HOST=smtp.gmail.com
# MAILER_TRANSPORT_PORT=465
# MAILER_TRANSPORT_USERNAME=your-email@gmail.com
# MAILER_TRANSPORT_PASSWORD=your-app-password

# Queue Configuration
QUEUE_DRIVER=file
QUEUE_PATH=runtime/queue

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# Cache Configuration
CACHE_DRIVER=file
CACHE_PATH=runtime/cache

# Logging
LOG_LEVEL=info
LOG_PATH=runtime/logs

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_NAME=Administrator

# Application URLs
APP_URL=http://localhost/yii2CarStore
STOREFRONT_URL=http://localhost/yii2CarStore/storefront/web
DASHBOARD_URL=http://localhost/yii2CarStore/dashboard/web

# Production Settings (uncomment for production)
# APP_ENV=prod
# APP_DEBUG=false
# MAILER_USE_FILE_TRANSPORT=false
# CACHE_DRIVER=redis
# LOG_LEVEL=error
